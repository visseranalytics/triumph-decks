---
interface Breadcrumb {
  label: string;
  path: string;
}

interface Props {
  title: string;
  subtitle?: string;
  backgroundImage: string;
  breadcrumbs?: Breadcrumb[];
}

const { title, subtitle, backgroundImage, breadcrumbs } = Astro.props;
---

<div class="relative h-[50vh] min-h-[400px] flex items-center justify-center overflow-hidden bg-slate-900">
  <!-- Background Image with Industrial Overlay -->
  <div class="absolute inset-0 z-0">
    <img
      src={backgroundImage}
      alt={title}
      class="w-full h-full object-cover animate-fade-in"
    />
    <div class="absolute inset-0 bg-slate-900/70 mix-blend-multiply"></div>
    <div class="absolute inset-0 bg-gradient-to-t from-slate-900 via-transparent to-slate-900/40"></div>
    <!-- Gritty Texture Pattern -->
    <div class="absolute inset-0 opacity-20 bg-[url('https://www.transparenttextures.com/patterns/carbon-fibre.png')]"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full text-center">
    {breadcrumbs && (
      <nav class="flex justify-center items-center gap-2 text-sm font-bold uppercase tracking-widest text-wood-400 mb-4 animate-fade-in-up">
        <a href="/" class="hover:text-white transition-colors">Home</a>
        {breadcrumbs.map((crumb) => (
          <>
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-slate-500">
              <path d="m9 18 6-6-6-6"/>
            </svg>
            <a href={crumb.path} class="hover:text-white transition-colors last:text-white last:cursor-default">
              {crumb.label}
            </a>
          </>
        ))}
      </nav>
    )}

    <h1 class="text-5xl md:text-7xl font-serif font-bold text-white uppercase tracking-tighter mb-6 animate-fade-in-up drop-shadow-xl">
      {title}
    </h1>

    {subtitle && (
      <div class="flex flex-col items-center animate-fade-in-up">
        <div class="h-1 w-24 bg-wood-500 mb-6"></div>
        <p class="text-xl md:text-2xl text-slate-300 max-w-3xl font-light leading-relaxed">
          {subtitle}
        </p>
      </div>
    )}
  </div>
</div>
