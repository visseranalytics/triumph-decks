---
import Layout from '../../layouts/Layout.astro';
import { SERVICES } from '../../data/constants.js';

export function getStaticPaths() {
  return SERVICES.map(service => ({
    params: { id: service.id },
    props: { service }
  }));
}

const { service } = Astro.props;
---

<Layout title={service.title}>
  <div class="min-h-screen bg-slate-50">
    <!-- Bold Industrial Header -->
    <div class="h-[50vh] min-h-[400px] relative overflow-hidden bg-slate-900">
      <div class="absolute inset-0 z-0">
        <img src={service.image} alt={service.title} class="w-full h-full object-cover" />
        <div class="absolute inset-0 bg-slate-900/80 mix-blend-multiply"></div>
        <div class="absolute inset-0 bg-gradient-to-t from-slate-900 via-transparent to-transparent"></div>
      </div>

      <div class="relative z-10 max-w-7xl mx-auto px-4 h-full flex flex-col justify-end pb-16">
        <nav class="flex items-center gap-2 text-sm font-bold uppercase tracking-widest text-wood-400 mb-6">
          <a href="/" class="hover:text-white transition-colors">Home</a>
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-slate-500">
            <path d="m9 18 6-6-6-6"/>
          </svg>
          <a href="/services" class="hover:text-white transition-colors">Services</a>
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-slate-500">
            <path d="m9 18 6-6-6-6"/>
          </svg>
          <span class="text-white">{service.title}</span>
        </nav>
        <h1 class="text-5xl md:text-7xl font-serif font-bold text-white uppercase tracking-tighter shadow-black drop-shadow-xl">{service.title}</h1>
      </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
      <div class="flex flex-col lg:flex-row gap-16">
        <div class="lg:w-2/3 space-y-12">
          <div class="prose prose-lg max-w-none">
            <h2 class="text-3xl font-serif font-bold text-slate-900 uppercase mb-6">Overview</h2>
            <p class="text-xl leading-relaxed font-light text-slate-800">{service.fullDescription}</p>
          </div>

          <div class="bg-white p-10 border-2 border-slate-200">
            <h3 class="text-2xl font-serif font-bold mb-8 uppercase flex items-center gap-3">
              <div class="h-8 w-1 bg-wood-600"></div>
              Technical Features
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              {service.features?.map((feature) => (
                <div class="flex items-center space-x-4 p-4 bg-slate-50 border border-slate-100">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-wood-600 shrink-0">
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                    <path d="m9 11 3 3L22 4"/>
                  </svg>
                  <span class="text-slate-900 font-bold uppercase text-sm tracking-wide">{feature}</span>
                </div>
              ))}
            </div>
          </div>

          <div class="space-y-6">
            <h3 class="text-2xl font-serif font-bold uppercase text-slate-900">Why Choose This?</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              {service.benefits?.map((benefit) => (
                <div class="flex items-start space-x-4">
                  <div class="w-2 h-2 mt-2 bg-wood-500 shrink-0"></div>
                  <span class="text-lg text-slate-700">{benefit}</span>
                </div>
              ))}
            </div>
          </div>
        </div>

        <div class="lg:w-1/3">
          <div class="bg-slate-900 p-8 text-white sticky top-24 border-t-8 border-wood-600">
            <h3 class="text-3xl font-serif font-bold uppercase mb-4">Start Building</h3>
            <p class="text-slate-400 mb-8 text-lg">Ready to transform your property? Get a comprehensive estimate for your {service.title.toLowerCase()}.</p>
            <a href="/contact" class="block w-full py-5 bg-wood-600 hover:bg-wood-500 text-white text-center font-bold text-lg uppercase tracking-widest transition-colors shadow-lg">
              Request Quote
            </a>
            <p class="text-center text-slate-500 text-sm mt-4 font-bold uppercase tracking-wider">No Obligation Estimate</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
